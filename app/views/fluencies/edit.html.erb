<%= form_for @fluency do |f| %>
    <%= @user.first_name %><br>
    <%= f.hidden_field :user_id, value: @user.id %>
    <%= @fluency.language.name %><br>
    <%= f.collection_select :experience_id, Experience.all, :id, :level %><br>
    <%= f.submit "Update" %>
 <% end %>
 <%= button_to "Delete Language", @fluency, method: :delete %>