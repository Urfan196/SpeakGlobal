<%= form_for @fluency do |f| %>
    <%= @user.first_name %><br>
    <%= f.hidden_field :user_id, value: @user.id %>
    <%= f.collection_select :language_id, @languages, :id, :name %><br>
    <%= f.collection_select :experience_id, Experience.all, :id, :level %><br>
    <%= f.submit "Create language connection"%>
 <% end %>