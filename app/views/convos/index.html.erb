
<% @convos.each do |convo| %>
  <% if convo.user == current_user %>
    <%= convo.message %> -
    <%= convo.user.first_name%><br><br>
  <% else %>
    <%= convo.user.first_name%> - 
    <%= convo.message %><br><br>
  <% end %>
<% end %>

<%= form_tag new_convo_path, method: 'get' do %>
  <%= hidden_field_tag :lesson_id, @lesson.id %>
  <%= submit_tag "Send Message" %>
<% end %>
