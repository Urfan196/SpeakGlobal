<!DOCTYPE html>
<html>
  <head>
    <title>ProjectModule2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
      
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if logged_in? %>
            <li class="nav-item">
              <a class="nav-link" href="/">Home </a>
            </li>

            <li class="nav-item">
              <%= link_to "Profile", current_user, class: "nav-link" %>
            </li>
            
            <li class="nav-item">
            <%= link_to "Other Users", users_path, class: "nav-link" %>
            </li>

            <li class="nav-item">
              <%= link_to "Lessons", lessons_path, class: "nav-link" %>
            </li>

            <li class="nav-item">
              <%= link_to "Sign Out", logout_path, method: :delete, class: "nav-link" %>
            </li>
            
          <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
